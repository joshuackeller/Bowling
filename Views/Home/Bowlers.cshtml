@{
}

@model List<Bowler>

<h4>@ViewBag.Team</h4>

    <div class="d-flex">
<table class="table table-bordered table-striped m-1 p-1">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone</th>
            <th>Team Name</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var b in Model)
        {
        <tr>
            <td>@b.BowlerFirstName @b.BowlerMiddleInit @b.BowlerLastName</td>
            <td>@b.BowlerAddress</td>
            <td>@b.BowlerCity</td>
            <td>@b.BowlerState</td>
            <td>@b.BowlerZip</td>
            <td>@b.BowlerPhoneNumber</td>
            <td>@b.Team.TeamName</td>
            <td><a asp-controller="Home" asp-action="EditBowler" asp-route-bowlerId="@b.BowlerID" class="btn btn-sm btn-warning">Edit</a></td>
            <td><a asp-controller="Home" asp-action="DeleteBowler" asp-route-bowlerId="@b.BowlerID" class="btn btn-sm btn-danger">Delete</a></td>
        </tr>
        }
    </tbody>

    </table>

    <div class="m-1 p-1">
        <vc:teams></vc:teams>
    </div>

    </div>

<div>
    <a asp-controller="Home" asp-action="AddBowler" class="btn btn-primary">Add Bowler </a>
</div>
